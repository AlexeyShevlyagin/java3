package Practic3;
import java.util.Random;
import java.util.Scanner;
import java.util.Arrays;
import java.util.*;
public class practic3 {

    public static void main(String[] args) {
        Random rand = new Random();
        Scanner input= new Scanner(System.in);
        int size = 10;
        System.out.println("ваш массив сформирован: ");
        double[] rand_mass = new double[size];
        for (int i =0; i<rand_mass.length;i++){
            rand_mass[i] = rand.nextDouble();
            System.out.println(i + " " + rand_mass[i]);
        }
        Arrays.sort(rand_mass);
        System.out.println("Ваш массив отсортирован");
        for (int i =0; i< rand_mass.length;i++) System.out.println(rand_mass[i]);
        double[] rand_mass_2 = new double[size];
        System.out.println("ваш массив сформирован: ");
        for (int i =0; i<rand_mass_2.length;i++){
            rand_mass_2[i] = Math.random();
            System.out.println(i + " " + rand_mass_2[i]);
        }
        Arrays.sort(rand_mass_2);
        System.out.println("Ваш массив отсортирован");
        for (int i =0; i< rand_mass_2.length;i++) System.out.println(rand_mass_2[i]);
    }
}
